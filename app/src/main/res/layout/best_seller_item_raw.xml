<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginBottom="@dimen/margin_8dp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/margin_8dp"
    app:cardElevation="@dimen/card_elevation_zero">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bs_is_favorites"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:background="@drawable/ellipse_13"
        android:elevation="@dimen/margin_10dp"
        android:outlineProvider="bounds"
        app:contentPadding="@dimen/margin_4dp"
        app:shapeAppearanceOverlay="@style/Favourite.ShapeAppearanceOverlay.Round"
        app:srcCompat="@drawable/ic_favourite_false"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bs_picture"
            android:layout_width="132dp"
            android:layout_height="@dimen/img_height_best_seller"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"
            tools:text="Note date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bs_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/discount_price"
                tools:text="Note date" />

            <TextView
                android:id="@+id/bs_price_without_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_6dp"
                android:textAppearance="@style/price_without_discount"
                tools:text="Note date" />
        </LinearLayout>

        <TextView
            android:id="@+id/bs_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:textAppearance="@style/samsung_gal"
            tools:text="Note date" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

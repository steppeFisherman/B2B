<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_166dp"
    android:layout_marginStart="@dimen/margin_8dp"
    app:cardCornerRadius="@dimen/margin_8dp"
    app:cardElevation="@dimen/card_elevation_zero">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_166dp"
        android:background="@drawable/rectangle_7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hs_is_new"
            android:layout_width="@dimen/size_27dp"
            android:layout_height="@dimen/size_27dp"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/ic_img_new_txt_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/hs_title"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_40dp"
            android:textAppearance="@style/iphone_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Note date" />

        <TextView
            android:id="@+id/hs_subtitle"
            android:layout_width="@dimen/margin_90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:textAppearance="@style/s_per_mega_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hs_title"
            tools:text="Note date" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hs_btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_22dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/rectangle_8"
            android:gravity="center"
            android:text="@string/buy_now"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:textAppearance="@style/buy_now_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hs_subtitle" />

        <ImageView
            android:id="@+id/hs_picture"
            android:layout_width="@dimen/width_300dp"
            android:layout_height="@dimen/height_132dp"
            android:layout_gravity="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_106dp"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/explorerFragment">

    <fragment
        android:id="@+id/explorerFragment"
        android:name="com.example.b2b.screens.explorerFragment.ExplorerFragment"
        android:label="fragment_explorer"
        tools:layout="@layout/fragment_explorer" />
    <fragment
        android:id="@+id/basketFragment"
        android:name="com.example.b2b.screens.basketFragment.BasketFragment"
        android:label="fragment_basket"
        tools:layout="@layout/fragment_basket" />
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.b2b.screens.favouriteFragment.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/personFragment"
        android:name="com.example.b2b.screens.personFragment.PersonFragment"
        android:label="fragment_person"
        tools:layout="@layout/fragment_person" />
    <action
        android:id="@+id/action_global_explorerFragment"
        app:destination="@id/explorerFragment"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right"
        app:popUpTo="@id/my_nav"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_basketFragment"
        app:destination="@id/basketFragment"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right"
        app:popUpTo="@id/my_nav"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_favouriteFragment"
        app:destination="@id/favouriteFragment"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right"
        app:popUpTo="@id/my_nav"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_personFragment"
        app:destination="@id/personFragment"
        app:enterAnim="@anim/from_right"
        app:exitAnim="@anim/to_left"
        app:popEnterAnim="@anim/from_left"
        app:popExitAnim="@anim/to_right"
        app:popUpTo="@id/my_nav"
        app:popUpToInclusive="true" />
</navigation>